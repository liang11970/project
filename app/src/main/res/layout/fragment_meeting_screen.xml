<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/iv_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/t40"
        android:gravity="center_horizontal"
        android:text="扫描签到"
        android:textColor="@color/white"
        android:textSize="@dimen/t20" />


    <Button
        android:id="@+id/his_sin_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="73dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="-10dp"
        android:background="@color/white"
        android:text="签到记录"
        android:textColor="@color/b1"
        android:textSize="@dimen/t13" />

    <ImageButton
        android:id="@+id/imgbtn_screen"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="180dp"
        android:background="@drawable/selector_screen_button" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t80"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_cloud" />

</RelativeLayout>
