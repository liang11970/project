<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dp">

        <ImageView
            android:id="@+id/iv_meeting"
            android:layout_width="90.0dp"
            android:layout_height="90.0dp"
            android:src="@mipmap/img_meeting" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_meeting"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Meeting_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="会议名称"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_Meeting_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="会议时间: 20xx.xx.xx xx:xx-xx:xx"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_Meeting_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:lines="2"
                android:text="内容简要得顶顶顶顶顶顶顶顶顶顶顶顶顶顶得得得得得得得得得得得得得得得得得到得得得得得得得得得得得得得得得得得到"
                android:textSize="15dip" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_SignIn_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="未签到"
            android:textSize="18dp" />

    </RelativeLayout>


</LinearLayout>
