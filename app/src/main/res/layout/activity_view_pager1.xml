<cn.com.hz_project.tools.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="92%h"
        android:layout_alignParentTop="true"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/content"
        android:background="#000"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:button="@null"
            android:checked="true"
            android:textSize="18dp"
            android:background="@drawable/bg_rbtn"
            android:textColor="@color/white"
            android:text="首页"
            android:drawableTop="@mipmap/a"
            />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:button="@null"
            android:textSize="18dp"
            android:background="@drawable/bg_rbtn"
            android:textColor="@color/white"
            android:text="文献"
            android:drawableTop="@mipmap/b"
            />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:button="@null"
            android:textSize="18dp"
            android:background="@drawable/bg_rbtn"
            android:textColor="@color/white"
            android:text="互动"
            android:drawableTop="@mipmap/c"
            />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:button="@null"
            android:textSize="18dp"
            android:background="@drawable/bg_rbtn"
            android:textColor="@color/white"
            android:text="设置"
            android:drawableTop="@mipmap/d"
            />

    </RadioGroup>

</cn.com.hz_project.tools.percent.PercentRelativeLayout>