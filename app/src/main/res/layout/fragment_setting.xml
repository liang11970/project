<?xml version="1.0" encoding="utf-8"?>
<cn.com.hz_project.tools.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5px">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="100%w"
        android:layout_alignParentTop="true"
        android:background="#FF3D6D95">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textColor="#ffff"
            android:text="设置"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 姓名-->
        <View
            android:id="@+id/d0"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="5px"
            android:background="#DBDBDB"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/pic1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/iv1"
                android:layout_alignBottom="@+id/iv1"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="姓名"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_toLeftOf="@+id/photo"
                android:layout_marginRight="15dp"
                android:layout_alignBottom="@+id/iv1"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="王霸丹"/>

            <ImageView
                android:id="@+id/photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/pic1"/>

            <View
                android:id="@+id/d1"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/iv1"
                android:background="#DBDBDB"/>


            <!-- 手机号-->
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/iv1"
                android:src="@mipmap/pic2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/iv2"
                android:layout_alignBottom="@+id/iv2"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="手机号"/>

            <TextView
                android:id="@+id/phoneNumb"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/iv2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:text="177****8888"/>
            <View
                android:id="@+id/d2"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/iv2"
                android:background="#DBDBDB"/>

            <!-- 部门-->
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/iv2"
                android:src="@mipmap/pic3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/iv3"
                android:layout_alignBottom="@+id/iv3"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|fill_vertical"
                android:textSize="16sp"
                android:text="部门"/>
            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/iv3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:text="教育部"/>
            <View
                android:id="@+id/d3"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/iv3"
                android:background="#DBDBDB"/>

            <View
                android:id="@+id/d4"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/d3"
                android:background="#DBDBDB"/>

            <!--帮助与反馈-->
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/d4"
                android:src="@mipmap/pic5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/iv4"
                android:layout_alignBottom="@+id/iv4"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="帮助与反馈"/>
            <View
                android:id="@+id/d5"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5px"
                android:layout_below="@+id/iv4"
                android:background="#DBDBDB"/>

            <!--关于我们-->

            <LinearLayout
                android:id="@+id/iv5"
                android:layout_below="@+id/d5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"

                    android:src="@mipmap/pic4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:text="关于我们"
                    android:layout_gravity="center"
                    />



            </LinearLayout>


            <View
                android:id="@+id/d6"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/iv5"
                android:background="#DBDBDB"/>

            <Button
                android:id="@+id/quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/d6"
                android:textColor="#ffff"
                android:background="@drawable/bg_btn_quit"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="退出登录"/>

        </RelativeLayout>

    </ScrollView>

    <!--<View
        android:id="@+id/d0"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="5px"
        android:background="#DBDBDB"/>

    <RelativeLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/title"
        app:layout_heightPercent="15%h">
    
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/pic1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv1"
            android:textSize="20sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/d1"
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#DBDBDB"/>-->

</cn.com.hz_project.tools.percent.PercentRelativeLayout >
