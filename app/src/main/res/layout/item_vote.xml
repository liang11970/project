<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="30px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_vote"
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@mipmap/iv_vote"
        android:layout_marginTop="15px"
        android:layout_marginBottom="15px"/>

    <TextView
        android:id="@+id/title_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_vote"
        android:layout_marginLeft="30px"
        android:layout_marginTop="15px"
        android:textSize="50px"
        android:text="投票标题"/>

    <TextView
        android:id="@+id/time_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_vote"
        android:layout_alignLeft="@+id/title_vote"
        android:layout_marginTop="15px"
        android:textSize="40px"
        android:text="时间:2016-01-01 12:12:12"/>

    <TextView
        android:id="@+id/content_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_vote"
        android:layout_alignLeft="@+id/title_vote"
        android:layout_marginTop="15px"
        android:maxLines="2"
        android:textSize="45px"
        android:text="这是投票标题这是投票标题这是投票标题这是投票标题这是投票标题这是投票标题"/>



</com.zhy.autolayout.AutoRelativeLayout>